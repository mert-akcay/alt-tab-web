@using MVC_App_1.Core.Entities
@using MVC_App_1.Enums
@model Product

<div class="container">
	<div class="card">
		<h2>Yeni ürün ekle</h2>
		<form asp-action="Create">

			<div asp-validation-summary="ModelOnly"></div>

			<div class="form-group">
				<label asp-for="Name" class="form-label"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name"></span>
			</div>
			<div class="form-group">
				<label asp-for="Price" class="form-label"></label>
				<input asp-for="Price" class="form-control" />
				<span asp-validation-for="Price"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="form-label"></label>
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description"></span>
			</div>
			<div class="form-group">
				<label asp-for="Category" class="form-label"></label>
				<select asp-for="Category" asp-items="Html.GetEnumSelectList<CategoryEnum>()">
					<option value="0">Lütfen kategori seçiniz...</option>
				</select>
				<span asp-validation-for="Category"></span>
			</div>
			<div class="form-group">
				<input type="submit" class="btn" value="Kaydet" />
				<a asp-action="Index" class="btn">Listeye geri dön</a>
			</div>
		</form>
	</div>
</div>
@using MVC_App_2.Core.Entities
@model List<Author>

<div class="container">
	<div class="card">
		<div>
			<h2>Yazar Listesi</h2>
			<a class="btn" asp-action="Create">Yeni Yazar Ekle</a>
		</div>

		<table class="table">
			<thead>
				<tr>
					<th>Ad</th>
					<th>Yaş</th>
					<th>İşlemler</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var author in Model)
				{
					<tr>
						<td>@author.Name</td>
						<td>@author.Age</td>
						<td>
							<a class="btn" asp-action="Edit" asp-route-id="@author.AuthorId">Düzenle</a>
							<a class="btn" asp-action="Details" asp-route-id="@author.AuthorId">Detaylar</a>
							<form asp-action="Delete" method="post" style="display:inline;">
								<input type="hidden" name="id" value="@author.AuthorId" />
								<button type="submit" class="btn">Sil</button>
							</form>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
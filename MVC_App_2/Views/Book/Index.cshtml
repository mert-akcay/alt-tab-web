@using MVC_App_2.Core.Entities
@model List<Book>

<div class="container">
	<div class="card">
		<div>
			<h2>Kitap Listesi</h2>
			<a class="btn" asp-action="Create">Yeni Kitap Ekle</a>
		</div>

		<table class="table">
			<thead>
				<tr>
					<th>Ad</th>
					<th>Basım Yılı</th>
					<th>Yazar</th>
					<th>İşlemler</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var book in Model)
				{
					<tr>
						<td>@book.Name</td>
						<td>@book.PublishYear</td>
						<td>@book.Author.Name</td>
						<td>
							<a class="btn" asp-action="Edit" asp-route-id="@book.BookId">Düzenle</a>
								<a class="btn" asp-action="Details" asp-route-id="@book.BookId">Detaylar</a>
							<form asp-action="Delete" method="post" style="display:inline;">
								<input type="hidden" name="id" value="@book.BookId" />
								<button type="submit" class="btn">Sil</button>
							</form>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>